<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="qxm_product_pdf_annotation_tool.ProductPDFPreview">
        <div class="d-flex flex-wrap">
            <div class="container pdf_container">
                <div class="row">
                    <div class="col-sm-2">
                        <div t-att-id="'page-list-' + props.id" class="page-list"/>
                    </div>
                    <div class="col-sm-7">
                        <div t-att-id="'pdf-container-' + props.id" class="pdf-container"/>
                    </div>
                    <div class="col-sm-3 description_container" t-att-id="'description_container_' +  props.id">
                        <table class="table">
                            <thead class="sticky-top">
                                <tr>
                                    <th scope="col" style="width: 15%;">Page.</th>
                                    <th scope="col" style="width: 75%;">Description</th>
                                </tr>
                            </thead>
                            <tbody t-att-id="'table_tbody_' + props.id">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
