<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="qxm_product_pdf_annotation_tool.ProductPDFAnnotation">
        <Layout display="display" className="'o_dashboard h-100'">
            <div class="d-flex flex-wrap">
                <div class="container pdf_container" style="max-width: 100%;margin: 0px;">
                    <div class="row">
                        <div id="sidebar" class="col-sm-2">
                            <div id="page-list" style="overflow-y: auto;max-height: 90vh;"/>
                        </div>
                        <div class="col-sm-7">
                            <div id="pdf-container"/>
                        </div>
                        <div class="col-sm-3" id="description_container">
                            <table class="table">
                                <thead class="sticky-top">
                                    <tr>
                                        <th scope="col" style="width: 10%;">Page.</th>
                                        <th scope="col" style="width: 80%;">Description</th>
                                        <th scope="col" style="width: 10%;"></th>
                                    </tr>
                                </thead>
                                <tbody t-ref="table_tbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </Layout>
    </t>

</templates>
